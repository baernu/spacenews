<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" styleClass="root" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
	<children>
	  <HBox styleClass="title">
         <children>
            <Label fx:id="titleLabel" text="Auction Items:" />
         </children>
      </HBox>
	  <HBox styleClass="center">
	    <children> 
	      <ListView fx:id="auctionItems" prefHeight="150.0" prefWidth="350.0" />
		</children>
	  </HBox>
	  <HBox styleClass="center">
	    <children> 
	      <Button fx:id="startAuctionButton" text="Start Auction" onAction="#startAuction"/>
		  <Button fx:id="showBiddingsButton" text="Show Biddings" />
		  <Button text="Exit" onAction="#exit" />
		</children>
	  </HBox>	
	</children>
</VBox>
